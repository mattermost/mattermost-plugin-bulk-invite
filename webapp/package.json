{
  "private": true,
  "scripts": {
    "build": "webpack --mode=production",
    "build:watch": "webpack --mode=production --watch",
    "debug": "webpack --mode=none",
    "debug:watch": "webpack --mode=development --watch",
    "lint": "eslint --ignore-pattern node_modules --ignore-pattern dist --ext .js --ext .jsx --ext tsx --ext ts . --quiet --cache",
    "fix": "eslint --ignore-pattern node_modules --ignore-pattern dist --ext .js --ext .jsx --ext tsx --ext ts . --quiet --fix --cache",
    "test": "jest --forceExit --detectOpenHandles --verbose",
    "test:watch": "jest --watch",
    "test-ci": "jest --forceExit --detectOpenHandles --maxWorkers=2",
    "check-types": "tsc"
  },
  "devDependencies": {
    "@babel/cli": "7.24.1",
    "@babel/core": "7.24.3",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "7.20.7",
    "@babel/plugin-proposal-optional-chaining": "7.21.0",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/preset-env": "7.24.3",
    "@babel/preset-react": "7.24.1",
    "@babel/preset-typescript": "7.24.1",
    "@babel/runtime": "7.24.1",
    "@emotion/babel-preset-css-prop": "11.11.0",
    "@emotion/core": "11.0.0",
    "@mattermost/types": "9.6.0",
    "@testing-library/jest-dom": "6.4.2",
    "@types/babel__core": "7.20.5",
    "@types/babel__template": "7.4.4",
    "@types/enzyme": "3.10.18",
    "@types/jest": "29.5.12",
    "@types/node": "20.12.2",
    "@types/react": "18.2.73",
    "@types/react-bootstrap": "0.32.36",
    "@types/react-dom": "18.2.23",
    "@types/react-redux": "7.1.33",
    "@types/react-router-dom": "5.3.3",
    "@types/react-transition-group": "4.4.10",
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "@typescript-eslint/typescript-estree": "7.4.0",
    "babel-eslint": "10.1.0",
    "babel-loader": "9.1.3",
    "babel-plugin-formatjs": "10.5.14",
    "babel-plugin-typescript-to-proptypes": "2.1.0",
    "css-loader": "6.10.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.8",
    "enzyme-to-json": "3.6.2",
    "eslint": "8.57.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-import-resolver-webpack": "0.13.8",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-cypress": "2.15.1",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "27.9.0",
    "eslint-plugin-mattermost": "github:mattermost/eslint-plugin-mattermost",
    "eslint-plugin-no-only-tests": "3.1.0",
    "eslint-plugin-react": "7.34.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "file-loader": "6.2.0",
    "identity-obj-proxy": "3.0.0",
    "isomorphic-fetch": "3.0.0",
    "jest": "29.7.0",
    "jest-canvas-mock": "2.5.2",
    "jest-junit": "16.0.0",
    "sass": "1.72.0",
    "sass-loader": "14.1.1",
    "style-loader": "3.3.4",
    "webpack": "5.91.0",
    "webpack-cli": "5.1.4"
  },
  "dependencies": {
    "@emotion/react": "11.11.4",
    "@mattermost/webapp": "github:mattermost/mattermost-webapp",
    "core-js": "3.36.1",
    "mattermost-redux": "5.33.1",
    "react": "^18.2.0",
    "react-redux": "9.1.0",
    "redux": "5.0.1",
    "typescript": "5.4.3"
  },
  "jest": {
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/non_npm_dependencies/"
    ],
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "identity-obj-proxy",
      "^.+\\.(css|less|scss)$": "identity-obj-proxy",
      "^.*i18n.*\\.(json)$": "<rootDir>/tests/i18n_mock.json",
      "^bundle-loader\\?lazy\\!(.*)$": "$1"
    },
    "moduleDirectories": [
      "",
      "node_modules",
      "non_npm_dependencies"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|react-router|mattermost-webapp)"
    ],
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.tsx"
    ],
    "testURL": "http://localhost:8065"
  }
}
